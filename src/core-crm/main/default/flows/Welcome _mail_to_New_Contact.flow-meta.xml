<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>54.0</apiVersion>
    <name>Welcome_Email_to_New_Contact</name>
    <label>Welcome Email to New Contact</label>
    <status>Active</status>
    <triggerType>RecordChange</triggerType>
    <triggerOccurrence>AfterInsert</triggerOccurrence>
    <start>
        <object>Contact</object>
        <objectVariable>
            <name>newContactRecord</name>
            <objectType>Contact</objectType>
            <isCollection>false</isCollection>
            <isInput>true</isInput>
            <isOutput>false</isOutput>
        </objectVariable>
    </start>
    <recordLookups/>
    <recordUpdates/>
    <decisions>
        <name>EmailFieldNotEmpty</name>
        <locationX>50</locationX>
        <locationY>50</locationY>
        <rules>
            <name>EmailIsPresent</name>
            <conditionLogic>And</conditionLogic>
            <conditions>
                <leftValueReference>newContactRecord.Email</leftValueReference>
                <operator>IsNotNull</operator>
                <rightValue></rightValue>
            </conditions>
            <connector>
                <targetReference>SendWelcomeEmail</targetReference>
            </connector>
        </rules>
    </decisions>
    <actionCalls>
        <name>SendWelcomeEmail</name>
        <locationX>100</locationX>
        <locationY>100</locationY>
        <actionType>SendEmail</actionType>
        <label>Send Welcome Email</label>
        <inputParameters>
            <name>senderAddress</name>
            <value>
                <stringValue>orgWideEmailAddressId</stringValue>
            </value>
            <name>recipientAddresses</name>
            <value>
                <elementReference>newContactRecord.Email</elementReference>
            </value>
            <name>subject</name>
            <value>
                <stringValue>Welcome to Our Company!</stringValue>
            </value>
            <name>htmlBody</name>
            <value>
                <stringValue>&lt;p&gt;Dear &lt;!--{newContactRecord.FirstName}--&gt;,&lt;/p&gt;&lt;p&gt;Welcome to our community!&lt;/p&gt;</stringValue>
            </value>
        </inputParameters>
    </actionCalls>
</Flow>
